<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeerfilTeela"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="100dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto_perfil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_perfil2"
                    app:civ_border_color="#BEBEBE"
                    app:civ_border_width="1dp" />


                <ImageView
                    android:id="@+id/bt_atualizarft"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ic_edit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/nomeExib"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/segoebold"
                    android:text="Nome"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp" />


                <TextView
                    android:id="@+id/sobrenomeExib"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:fontFamily="@font/segoebold"
                    android:text="Sobrenome"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:elevation="36dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:background="@drawable/card_background">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="15dp"
            android:drawableEnd="@drawable/tomat"
            android:fontFamily="@font/segoebold"
            android:text="Perfil"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <Button
            android:id="@+id/btnEditInfos"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="13dp"
            android:backgroundTint="#4f7302"
            android:drawableEnd="@drawable/pencil"
            android:fontFamily="@font/segoebold"
            android:text="Alterar dados?"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:cornerRadius="26dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <EditText
                android:id="@+id/nomeAlterar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/ic_perfil"
                android:drawableTint="@color/black"
                android:enabled="false"
                android:fontFamily="@font/segoe"
                android:hint="Nome"
                android:inputType="text"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />

            <EditText
                android:id="@+id/sobrenomeAlterar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/ic_perfil"
                android:drawableTint="@color/black"
                android:enabled="false"
                android:fontFamily="@font/segoe"
                android:hint="Sobrenome"
                android:inputType="text"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />

            <EditText
                android:id="@+id/telAlterar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/ic_baseline_call_24"
                android:drawableTint="@color/black"
                android:enabled="false"
                android:fontFamily="@font/segoe"
                android:hint="Telefone"
                android:inputType="number"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />


            <EditText
                android:id="@+id/textEmailUsuario"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/black"
                android:enabled="false"
                android:fontFamily="@font/segoe"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />


            <EditText
                android:id="@+id/textSenhaUsuario"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/ic_cadeado"
                android:drawableTint="@color/black"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:hint="Senha"
                android:inputType="textPassword"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#808080" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="48dp"
                android:orientation="vertical"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnAtualizar"
                    android:layout_width="310dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#f26e50"
                    android:fontFamily="@font/segoebold"
                    android:text="Atualizar"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:cornerRadius="26dp" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="310dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/segoebold"
                    android:text="Logout"
                    android:textColor="#f26e50"
                    android:textSize="14dp"
                    app:cornerRadius="26dp" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>







</LinearLayout>